                            }
                        }
                    },
                    colors: ['#FBFFB6', '#F2C94C', '#56FE6E', '#0FBAE5', '#EE5FAC', '#F9645D'],
                    series: sortData(data.hits)
                });
            });
        }

        function loadChart(table_class, score_id, total_marv, total_perf, total_great, total_good, total_okay, total_miss) {

            // Fetch score data
